<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/imagenAnimal"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginBottom="24dp"
            android:src="@drawable/oveja"
            android:contentDescription="Imagen del animal"
            android:scaleType="centerCrop"
            android:background="@drawable/circle_border_green"
            android:padding="4dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:background="#FFFFFF"
            android:elevation="6dp"
            android:layout_margin="8dp"
            android:clipToPadding="false"
            android:clipChildren="false"
            android:backgroundTint="#FFFFFF"
            android:backgroundTintMode="src_over"
            android:shape="rectangle"
            android:radius="12dp"
            android:shadowColor="#22000000">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Crotal: "
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#468f67"/>

                <TextView
                    android:id="@+id/textCrotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12345678"
                    android:textSize="18sp"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nacimiento: "
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#468f67" />

                <TextView
                    android:id="@+id/textNacimiento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="01/01/2020"
                    android:textSize="18sp"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Peso: "
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#468f67" />

                <TextView
                    android:id="@+id/textPeso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="75 kg"
                    android:textSize="18sp"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Grupo: "
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#468f67" />

                <TextView
                    android:id="@+id/textGrupo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Grupo A"
                    android:textSize="18sp"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fecha de inserción: "
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#468f67" />

                <TextView
                    android:id="@+id/textFechaInsercion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14/05/2025"
                    android:textSize="18sp"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Finca: "
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#468f67" />

                <TextView
                    android:id="@+id/textFinca"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Finca Los Pinos"
                    android:textSize="18sp"
                    android:textColor="#000000" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="48dp"
            android:weightSum="2">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEditar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="✏️ Editar"
                android:textColor="#FFFFFF"
                android:textAllCaps="false"
                android:padding="12dp"
                android:fontFamily="sans-serif-medium"
                android:elevation="4dp"
                app:backgroundTint="#468f67"
                app:cornerRadius="16dp"
                android:layout_marginEnd="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEliminar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="🗑️ Eliminar"
                android:textColor="#FFFFFF"
                android:textAllCaps="false"
                android:padding="12dp"
                android:fontFamily="sans-serif-medium"
                android:elevation="4dp"
                app:backgroundTint="#D32F2F"
                app:cornerRadius="16dp" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
