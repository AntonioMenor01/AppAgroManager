<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:backgroundTint="@color/white"
    android:gravity="center_horizontal"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/imagenAnimal"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:src="@drawable/alimentar"
        android:contentDescription="Imagen del animal"
        android:layout_marginBottom="24dp"
        android:scaleType="centerInside"
        android:background="@drawable/circle_border_green"
        android:padding="12dp" />

    <Spinner
        android:id="@+id/spinnerGrupo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/spinner_border_green"
        android:layout_marginBottom="16dp"
        android:popupBackground="@drawable/dropdown_background"
        android:padding="12dp"
        android:fontFamily="sans-serif-medium"
        android:textColor="#2E7D32" />

    <TextView
        android:id="@+id/textViewPienso"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_textview_clickable"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:textColor="#2E7D32"
        android:textSize="16sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/textViewCantidad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cantidad: --"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginBottom="8dp"
        android:fontFamily="sans-serif" />

    <TextView
        android:id="@+id/textViewConsumoPorAnimal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Consumo por animal: --"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginBottom="8dp"
        android:fontFamily="sans-serif" />

    <TextView
        android:id="@+id/textViewConsumoTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Consumo total del grupo: --"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginBottom="24dp"
        android:fontFamily="sans-serif" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonAlimentar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ¥• Alimentar"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        app:backgroundTint="#468f67"
        android:fontFamily="sans-serif-medium"
        android:elevation="4dp"
        app:cornerRadius="16dp"
        android:layout_marginTop="8dp" />

</LinearLayout>
