<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="6dp"
    android:layout_marginHorizontal="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/nombreTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del insumo"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="4dp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/tipoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo"
            android:textSize="14sp"
            android:textColor="#555555" />

        <TextView
            android:id="@+id/cantidadTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cantidad: 0.0"
            android:textSize="14sp"
            android:textColor="#555555" />

        <TextView
            android:id="@+id/unidadTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unidad: kg"
            android:textSize="14sp"
            android:textColor="#555555" />

        <Button
            android:id="@+id/registrarUsoBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:text="Registrar Uso"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/verde"
            android:textColor="@android:color/white" />

    </LinearLayout>
</androidx.cardview.widget.CardView>