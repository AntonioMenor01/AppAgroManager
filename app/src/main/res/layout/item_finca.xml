<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardFinca"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:layout_marginHorizontal="4dp"
    android:elevation="6dp"
    android:padding="12dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvNombreFinca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre Finca"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tvUbicacionFinca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UbicaciÃ³n"
            android:textSize="14sp"
            android:textColor="#666" />

        <TextView
            android:id="@+id/tvCapacidadFinca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Capacidad: 100"
            android:textSize="14sp"
            android:textColor="#333" />

        <TextView
            android:id="@+id/tvAnimalesActuales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Animales: 67"
            android:textSize="14sp"
            android:textColor="#333" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
