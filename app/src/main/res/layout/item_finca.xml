<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardFinca"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="12dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNombreFinca"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre Finca"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#2E7D32" />

            <TextView
                android:id="@+id/tvUbicacionFinca"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UbicaciÃ³n"
                android:textSize="14sp"
                android:textColor="#555" />

            <TextView
                android:id="@+id/tvCapacidadFinca"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Capacidad: 100"
                android:textSize="14sp"
                android:textColor="#777" />

            <TextView
                android:id="@+id/tvAnimalesActuales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Animales: 67"
                android:textSize="14sp"
                android:textColor="#777" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
